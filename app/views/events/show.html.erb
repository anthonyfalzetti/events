<article>
  <header>
    <h1><%= @event.name %></h1>
  </header>
  <h2>Description</h2>
  <p>
    <%= @event.description %>
  </p>
  <h3>When</h3>
  <p>
    <%= @event.starts_at %>
  </p>
  <h3>Where</h3>
  <p>
    <%= @event.location %>
  </p>
  <h3>Price</h3>
  <p>
    <%= number_to_currency(@event.price) %>
  </p>
</article>